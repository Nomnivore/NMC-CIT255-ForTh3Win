@page
@model ForTh3Win.Pages.Kyle.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">

    <h1 class="text-center">@Model.Review.GameName</h1>
    <h2 class="text-center fs-3 fw-normal fst-italic">Review by @Model.Review.Reviewer</h2>
    <div class="row justify-content-center">
        <div class="col-auto">
            <a asp-page="./Index" class="btn btn-outline-primary mx-auto">Return to All</a>
        </div>
    </div>

    @*page body*@
    <div class="row justify-content-center mt-4">

        @*model summary*@
        <div class=" col-11 col-md-4 border border-2 rounded py-4 px-3 mb-4 text-black fs-5" 
            style="
                   background-color: #CCE;
                   border-color: #666!important;
            ">
            <div class="d-flex flex-column" style="gap: .75rem;">
                <div class="summary-fieldgroup">
                    <span class="fw-bold">Publisher: </span><span>@Model.Review.Publisher</span>
                </div>
                <div class="summary-fieldgroup">
                    <span class="fw-bold">Genre: </span><span>@Html.DisplayFor(model => Model.Review.Genre)</span>
                </div>
                <div class="summary-fieldgroup">
                    <span class="fw-bold">ESRB Rating: </span><span>@Html.DisplayFor(model => Model.Review.ESRBRating)</span>
                </div>
                <div class="summary-fieldgroup">
                    <span class="fw-bold">Release Date: </span><span>@Html.DisplayFor(model => Model.Review.ReleaseDate)</span>
                </div>
                <div class="summary-fieldgroup">
                    <span class="fw-bold">Reviewer: </span><span>@Model.Review.Reviewer</span>
                </div>
            </div>
            <div class="d-flex justify-content-end mt-4" style="gap: 1rem;">
                <span class="fw-bold align-self-end" style="vertical-align: bottom;">Review Rating:</span>
                <span class="fs-1 lh-1 align-self-end">@Model.Review.ReviewerRating.ToString("0.0")</span>
            </div>
        </div>

        @*model content*@
        <div class="col">
            <h3>Description</h3>
            <p class="fs-5">@Model.Review.Description</p>
            <h3 class="mt-2">Review</h3>
            <p class="fs-5">@Model.Review.ReviewText</p>

            <div class="d-flex w-100 justify-content-end" style="gap: 1rem;">
                <a asp-page="./Edit" asp-route-id="@Model.Review?.ID" class="btn btn-outline-secondary">Edit</a>
                <a asp-page="./Delete" asp-route-id="@Model.Review?.ID" class="btn btn-outline-danger">Delete</a>
            </div>
        </div>
    </div>
</div>