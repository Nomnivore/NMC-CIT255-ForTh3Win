@page
@model ForTh3Win.Pages.Kyle.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-lg-8 col-xl-8 mx-auto p-3 shadow-lg border border-4 rounded-3">
        <h1 class="text-center">Delete Review</h1>
        <h2 class="text-center fs-3 fw-normal mb-3">Are you sure you want to delete this review?</h2>
        <hr />

        <div class="col d-flex flex-column" style="gap: 1rem;">
@*            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Review.ID" />*@

            <div class="row">
                <div class="col">
                    <div class="form-floating">
                        <input readonly asp-for="Review.GameName" class="form-control" placeholder="Video Game" />
                        <label asp-for="Review.GameName" class="control-label"></label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm">
                    <div class="form-floating">
                        <input readonly asp-for="Review.Publisher" class="form-control" placeholder="Publisher" />
                        <label asp-for="Review.Publisher" class="control-label"></label>
                    </div>
                </div>
                <div class="col-sm">
                    <div class="form-floating">
                        <input readonly asp-for="Review.Reviewer" class="form-control" placeholder="Your name" />
                        <label asp-for="Review.Reviewer" class="control-label"></label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="form-floating">
                        <textarea readonly asp-for="Review.Description" style="height: 8rem;" id="descText" class="form-control" placeholder="Brief description of the game"></textarea>
                        <label asp-for="Review.Description" class="control-label"></label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="form-floating">
                        <textarea readonly asp-for="Review.ReviewText" style="height: 8rem;" id="reviewText" class="form-control" placeholder="Your review"></textarea>
                        <label asp-for="Review.ReviewText" class="control-label"></label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="form-floating">
                        <input readonly asp-for="Review.ReviewerRating" type="number" class="form-control" placeholder="0-5.0" />
                        <label asp-for="Review.ReviewerRating" class="control-label"></label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <select readonly asp-for="Review.ESRBRating" class="form-control" asp-items="Html.GetEnumSelectList<Models.ESRBEnum>()">
                            <option>Select ESRB Rating ...</option>
                        </select>
                        <label asp-for="Review.ESRBRating" class="control-label"></label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="form-floating">
                        <select readonly asp-for="Review.Genre" class="form-control" asp-items="Html.GetEnumSelectList<Models.GenreEnum>()">
                            <option>Select Genre ...</option>
                        </select>
                        <label asp-for="Review.Genre" class="control-label"></label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input readonly asp-for="Review.ReleaseDate" class="form-control" placeholder="01/01/2000" />
                        <label asp-for="Review.ReleaseDate" class="control-label"></label>
                    </div>
                </div>
            </div>

            <hr />

            <form method="post">
                <input type="hidden" asp-for="Review.ID" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-page="./Details" asp-route-id="@Model.Review.ID" class="btn btn-outline-secondary">Back to Review</a>
                <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>