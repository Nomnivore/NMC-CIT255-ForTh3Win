@page
@model ForTh3Win.Pages.James.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<head>
    <style>
        * {
            color: lightgray;
        }

        h1 {
            color: #9747FF;
        }

        a {
            color: #111;
            text-decoration: none;
        }

        body {
            background-color: #30233E;
        }

        .searchBtns {
            width: 120px;
            color: #111;
            background-color: #9747FF;
        }

        .sideleft {
            width: 30%;
            display: inline-block;
            z-index: 1;
            background-color: #111;
            color: #9747FF;
            border-right: 6px solid #9747FF;
            overflow-x: hidden;
            padding: 20px;
            flex: 1;
        } 

        .sideright {
            width: 60%;
            display: inline-block;
            z-index: 1;
            background-color: #111;
            color: #9747FF;
            text-align: right;
            overflow-x: hidden;
            padding: 20px;
            flex: 1;
        }

        .score {
            background-color: #9747FF;
            color: lightgrey;
            text-align: center;
            height: 50px;
            width: 50px;
            border-radius: 10px;
        }

        .plate {
            background-color: #111;
            color: lightgray;
            margin-top: 100px;
            padding: 20px;
            border-radius: 15px;
            justify-content: center;
        }
    </style>
</head>
<body>
    <h1>Delete</h1>
    <div class="plate">
        <div style="text-align:center">
            <h3>Are you sure you want to delete this?</h3>
            <hr />
            <img src="~/Images/delete.png" width="100px" width="100px"/>
        </div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Review.GameName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Review.GameName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Review.Publisher)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Review.Publisher)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Review.Reviewer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Review.Reviewer)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Review.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Review.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Review.ReviewerRating)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Review.ReviewerRating)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Review.ReviewText)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Review.ReviewText)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Review.ESRBRating)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Review.ESRBRating)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Review.Genre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Review.Genre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Review.ReleaseDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Review.ReleaseDate)
            </dd>
        </dl>
        <form method="post" style="text-align:center">
            <input type="hidden" asp-for="Review.ID" />
            <input type="submit" value="Delete" class="searchBtns" /> |
            <button class="searchBtns"><a asp-page="./Index">Cancel</a></button>
        </form>
    </div>
</body >
